<% c++ #include "controller/rules.h" %>
<% skin my_skin %>
<% view rules uses Content::Rules extends base %>

<% template render() %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <% include baseHead() %>
        <% include settingsHead() %>
        <% include navbarHead() %>
        <% include searchActionHead() %>
        <% include titleHead() %>
        <link rel="stylesheet" type="text/css" href="/<%= sitePathPrefix %>css/rules.css">
    </head>
    <body>
        <% include settingsTexts() %>
        <% include settings() %>
        <br />
        <% include navbar() %>
        <% if ( !content.searchApiKey.empty() ) %>
            <br />
        <% end %>
        <% include searchAction("Top") %>
        <div class="theTitle">
            <h1><%= currentBoard.title %></h1>
        </div>
        <div class="rules">
            <ol>
            <%foreach rule in rules %>
                <% item %>
                    <li>
                        <%= rule | raw %>
                    </li>
                <% end %>
            <% empty %>
                </ol>
                <p>
                    <%= noRulesText %>
                </p>
                <ol>
            <% end %>
            </ol>
        </div>
    </body>
</html>
<% end template %>

<% end view %>
<% end skin %>
