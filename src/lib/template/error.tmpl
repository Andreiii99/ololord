<% c++ #include "controller/error.h" %>
<% skin my_skin %>
<% view error uses Content::Error extends base %>

<% template render() %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <% include baseHead() %>
        <% include settingsHead() %>
        <% include navbarHead() %>
        <% include searchActionHead() %>
        <% include titleHead() %>
        <link rel="stylesheet" type="text/css" href="/<%= sitePathPrefix %>css/error.css">
    </head>
    <body>
        <% include settingsTexts() %>
        <% include settings() %>
        <br />
        <% include navbar() %>
        <% if ( !content.searchApiKey.empty() ) %>
            <br />
        <% end %>
        <% include searchAction("Top") %>
        <div class="theTitle">
            <h1><%= errorMessage %></h1>
        </div>
        <div class="error">
            <%= errorDescription %>
        </div>
    </body>
</html>
<% end template %>

<% end view %>
<% end skin %>
