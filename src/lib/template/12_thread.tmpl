<% c++ #include "controller/thread.h" %>
<% skin my_skin %>
<% view thread uses Content::Thread extends base_board %>

<% template threadActions(std::string position) %>
<div class="threadActions">
    [<a href="/<%= sitePathPrefix %><%= currentBoard.name %>"><%= backText %></a>]
    [<a href="javascript:updateThread('<%= currentBoard.name %>', <%= number %>);"><%= updateThreadText %></a>]
    <% if ( "top" == position ) %>
        [<a href="#bottom"><%= toBottomText %></a>]
    <% else %>
        [<a href="#top"><%= toTopText %></a>]
    <% end %>
    <% if ( content.autoUpdateEnabled ) %>
        [<input onclick="setAutoUpdateEnabled(this);" id="autoUpdate_<%= position %>"
            type="checkbox" checked="true"><%= autoUpdateText %></input>]
    <% else %>
        [<input onclick="setAutoUpdateEnabled(this);" id="autoUpdate_<%= position %>"
            type="checkbox"><%= autoUpdateText %></input>]
    <% end %>
</div>
<% end template %>

<% template head() %>
<% include baseHead() %>
<% include settingsHead() %>
<% include navbarHead() %>
<% include bannerHead() %>
<% include createActionHead() %>
<% include boardHead() %>
<% include searchActionHead() %>
<% include titleHead() %>
<link rel="stylesheet" type="text/css" href="/<%= sitePathPrefix %>css/thread.css">
<script type="text/javascript" src="/<%= sitePathPrefix %>js/thread.js"></script>
<% end template %>

<% template body() %>
<% include baseTexts() %>
<% include settingsTexts() %>
<% include boardTexts() %>
<% include navigationButton("bottom") %>
<% include navigationButton("top") %>
<input id="noNewPostsText" type="hidden" value="<%= noNewPostsText %>" />
<input id="newPostsText" type="hidden" value="<%= newPostsText %>" />
<input id="currentThreadNumber" type="hidden" value="<%= opPost.number %>" />
<iframe id="kostyleeque" name="kostyleeque" style="display: none;" onload="posted();"></iframe>
<a id="top"></a>
<% include settings() %>
<br />
<% include navbar() %>
<% if ( !content.searchApiKey.empty() ) %>
    <br />
<% end %>
<% include searchAction("Top") %>
<% if ( !content.bannerFileName.empty() ) %>
    <br />
<% end %>
<% include banner() %>
<div class="theTitle">
    <% if ( !content.pageTitle.empty() ) %>
        <h1><%= pageTitle %></h1>
    <% else %>
        <h1><%= currentBoard.title %> - <%= currentThread %></h1>
    <% end %>
</div>
<% if ( !content.postingEnabled ) %>
    <div class="theMessage">
        <h2><%= postingDisabledText %></h2>
    </div>
<% elif ( content.postLimitReached() ) %>
    <div class="theMessage">
        <h2><%= postLimitReachedText %></h2>
    </div>
<% else %>
    <hr />
<% end %>
<% if ( !content.postLimitReached() && content.bumpLimitReached() ) %>
    <div class="theMessage">
        <h3><%= bumpLimitReachedText %></h3>
    </div>
<% end %>
<% include createAction("Top") %>
<hr />
<% include threadActions("top") %>
<hr />
<% include post(opPost, 0) %>
<% foreach p in posts %>
    <% item %>
        <% include post(p, 0) %>
    <% end %>
<% end %>
<input id="afterAllPosts" type="hidden" />
<hr />
<% include threadActions("bottom") %>
<% if ( content.postingEnabled && !content.postLimitReached() ) %>
    <hr />
<% end %>
<% include createAction("Bottom") %>
<hr />
<% include navbar() %>
<% if ( !content.searchApiKey.empty() ) %>
    <br />
<% end %>
<% include searchAction("Bottom") %>
<a id="bottom"></a>
<% end template %>

<% template render() %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <% include head() %>
    </head>
    <body onload="javascript:initializeOnLoadSettings(); initializeOnLoadThread();">
        <% include body() %>
    </body>
</html>
<% end template %>

<% end view %>
<% end skin %>
